<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Activities.DecideWinner">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_trophy"
        android:backgroundTint="#4DFBC02D"
        android:orientation="vertical">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:src="@drawable/ic_back"
        android:id="@+id/back_btn"
        tools:ignore="ContentDescription" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_winners"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_bold"
        android:id="@+id/set_winner" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provide_urls_for_the_winning_entries"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/montserrat_medium"
        android:id="@+id/instructions_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/border"
        android:layout_marginHorizontal="30dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:id="@+id/first_pos_img"
            android:padding="30dp"
            android:src="@drawable/ic_photo"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_layout"
            android:layout_marginEnd="10dp"
            android:hint="First Position"
            android:textColorHint="@color/grey"
            app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:hintTextColor="@color/colorAccent"
            app:boxStrokeColor="@color/input_text_field_color"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/first_pos_img_url_field"
                android:maxLines="1"
                android:textSize="17sp"
                android:background="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorAccent" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginHorizontal="30dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:id="@+id/second_pos_img"
                android:padding="30dp"
                android:src="@drawable/ic_photo"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/second_layout"
                android:layout_marginEnd="10dp"
                android:hint="Second Position"
                android:textColorHint="@color/grey"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:hintTextColor="@color/colorAccent"
                app:boxStrokeColor="@color/input_text_field_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/second_pos_img_url_field"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorAccent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginHorizontal="30dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:id="@+id/third_pos_img"
                android:padding="30dp"
                android:src="@drawable/ic_photo"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/third_layout"
                android:layout_marginEnd="10dp"
                android:hint="Third Position"
                android:textColorHint="@color/grey"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                app:hintTextColor="@color/colorAccent"
                app:boxStrokeColor="@color/input_text_field_color"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/third_pos_img_url_field"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:background="@color/white"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/colorAccent" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/button_bg"
            android:id="@+id/preview_result_btn"
            android:text="preview"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/button_bg"
            android:id="@+id/finalize_result_btn"
            android:text="Confirm Results"
            android:backgroundTint="@color/good_green"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_bold"/>



    </LinearLayout>

</ScrollView>