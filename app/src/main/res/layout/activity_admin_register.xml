<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activities.AdminRegister">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:id="@+id/main_page"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/admin_register"
                    android:fontFamily="@font/montserrat_extra_bold"
                    android:textSize="24sp"
                    android:textColor="@color/colorAccent"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginHorizontal="50dp"
                    android:id="@+id/name_layout"
                    android:hint="@string/name"
                    android:textColorHint="@color/grey"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/input_text_field_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/name_field"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:background="@color/white"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="50dp"
                    android:id="@+id/admin_key_layout"
                    android:hint="@string/admin_key"
                    android:textColorHint="@color/grey"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/input_text_field_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/admin_key_field"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:background="@color/white"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="50dp"
                    android:id="@+id/email_layout"
                    android:hint="@string/email_id"
                    android:textColorHint="@color/grey"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/input_text_field_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/email_field"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:background="@color/white"
                        android:inputType="textEmailAddress"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="50dp"
                    android:id="@+id/password_layout"
                    android:hint="@string/password"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="@color/grey"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/input_text_field_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/password_field"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:background="@color/white"
                        android:inputType="textPassword"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="50dp"
                    android:id="@+id/confirm_password_layout"
                    android:hint="@string/confirm_password"
                    app:passwordToggleEnabled="true"
                    android:textColorHint="@color/grey"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Small"
                    app:hintTextColor="@color/colorAccent"
                    app:boxStrokeColor="@color/input_text_field_color"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/confirm_password_field"
                        android:maxLines="1"
                        android:textSize="17sp"
                        android:background="@color/white"
                        android:inputType="textPassword"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/colorAccent" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/login"
                    android:layout_marginTop="35dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:text="@string/register"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorAccent"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    app:cornerRadius="30dp"
                    style="@style/TextAppearance.MaterialComponents.Button" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="30dp">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/already_an_admin"
                        android:textColor="@color/dark_grey"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/login_here"
                        android:id="@+id/register_to_login"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

